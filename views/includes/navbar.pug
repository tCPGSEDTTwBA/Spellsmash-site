mixin navbar(activePage, ...pages)
    nav(class="navbar sticky-top")
        div(class="container")
            div(class="col-12")
                span(class="navbar-brand" href="#") 
                    h1 Alan Roth
        div(class="navbar-container")
            ul(class="navbar-navitems row")
                each page in pages
                    li(class="nav-item col")
                        if activePage === page
                            a(class="nav-link active" href=page)= page
                        else
                            a(class="nav-link" href=page)= page